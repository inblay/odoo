<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_purchaseorder_document_inherit" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//div[@id='informations']/div[@t-if='o.date_order']" position="after">
            <div class="col-3 bm-2">
                <strong>Currency:</strong>
                <p t-field="o.currency_id" class="m-0"/>
            </div>
        </xpath>
        <xpath expr="//div[@id='total']//table/tr[hasclass('border-black')]/td[1]/strong" position="inside">
            <span t-field="o.currency_id.name"/>
        </xpath>
        <xpath expr="//div[@id='total']//table/tr[2]/td[1]" position="inside">
            <span t-field="o.currency_id.name"/>
        </xpath>
        <xpath expr="//div[@id='total']//table/tr[hasclass('o_total')]/td[1]/strong" position="inside">
            <span t-field="o.currency_id.name"/>
        </xpath>
    </template>
</odoo>
